<script src="https://unpkg.com/js-alert/dist/jsalert.min.js"></script>

<script>

    {{#if unauth}}
    JSAlert.alert("You will be redirected to the sign in page.","Unauthorized", JSAlert.Icons.Failed).dismissIn(1000 * 3).then(function(){
        window.location.href='../';
    })

    {{else}}
    JSAlert.alert("Page not found. You will be redirected to the home page","Not Found", JSAlert.Icons.Failed).dismissIn(1000 * 3).then(function(){
        window.location.href='../';
    })
    {{/if}}

</script>


